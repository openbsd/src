LINK	raminst			bin/sh
LINK	bin/sh			bin/-sh
LINK	raminst			bin/sleep
LINK	raminst			bin/stty
LINK	raminst			bin/sync
LINK	raminst			bin/test
LINK	raminst			bin/[
