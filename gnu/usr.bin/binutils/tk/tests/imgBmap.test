    update
    .c delete all
    image delete i1
} {}
test imageBmap-10.2 {ImgBmapFree procedures, unlinking} {
    eval image delete [image names]
    .c delete all
    image create bitmap i1 -data $data1 -maskdata $data2 -foreground #112233 \
	    -background #445566
    .c create image 100 100 -image i1
    button .b1 -image i1
    button .b2 -image i1
    button .b3 -image i1
    pack .b1 .b2 .b3
    update
    destroy .b2
    update
    destroy .b3
    update
    destroy .b1
    update
    .c delete all
} {}

