clean:
	rm -f makeuctb$x *.o *uni.h *uni2.h

distclean: clean
	-rm -rf obsolete
	rm -f core *.bak *.sav *~ *.h_old

depend :
	makedepend -fmakefile -- $(CPP_OPTS) -- $(C_SRC)

