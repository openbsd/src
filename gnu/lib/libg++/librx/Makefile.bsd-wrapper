LIB=		rx
CFLAGS+=	-DHAVE_ALLOCA=1 -DSTDC_HEADERS=1 -DHAVE_STRING_H=1
CPPFLAGS+=	-I$(.CURDIR)

SRCS=		rx.c

install:
	@-cd $(.CURDIR); for i in *.h; do \
		cmp -s $$i $(DESTDIR)/usr/include/g++/$$i || \
	install -c -o $(BINOWN) -g $(BINGRP) -m $(NONBINMODE) \
		$$i $(DESTDIR)/usr/include/g++/$$i; \
	done

.include <bsd.lib.mk>
