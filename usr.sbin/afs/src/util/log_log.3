.Fa "va_list args"
.Fc
.Fo "Log_method *log_open"
.Fa "char *progname"
.Fa "char *fname"
.Fc
.Fo "void log_close"
.Fa "Log_method *method"
.Fc
.Fo "Log_unit *log_unit_init"
.Fa "Log_method *method"
.Fa "const char *name"
.Fa "struct units *lognames"
.Fa "unsigned long default_mask"
.Fc
.Fo "void log_unit_free"
.Fa "Log_method *method"
