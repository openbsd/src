use strict;
use warnings;

sub run
{
	my ($cmd, $name) = @_;
	my $module = "OpenBSD::Pkg\u$cmd";
	eval "require $module;";
	if ($@) {
		die $@;
	}
	$module->parse_and_run($name);
	exit(0);
}
my @l = qw(add check create delete info);

for my $i (@l) {
	if ($0 =~ m/\/?pkg_$i$/) {
		run($i, "pkg_$i");
	}
}

for my $i (@l) {
	if ($ARGV[0] eq $i) {
		shift;
		run($i, "pkg $i");
	}
}
print STDERR "Usage: pkg [",join("|", @l),"] [args]\n";
exit(1);
