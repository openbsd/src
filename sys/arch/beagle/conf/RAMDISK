omgpio2		at ahb? addr 0x49052000 intr 31
omgpio3		at ahb? addr 0x49054000 intr 32
omgpio4		at ahb? addr 0x49056000 intr 33
omgpio5		at ahb? addr 0x49058000 intr 34

omdog0		at ahb? addr 0x48314000 		# watchdog timer

