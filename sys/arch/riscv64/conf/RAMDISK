machine		riscv64
maxusers	4

option		PCIVERBOSE
option		USBVERBOSE
option		SMALL_KERNEL
option		NO_PROPOLICE
option		BOOT_CONFIG

option		RAMDISK_HOOKS
option		MINIROOTSIZE=16384

option		FFS
option		FFS2
option		MSDOSFS
option		INET6
option		EXT2FS
option		NFSCLIENT
option		CRYPTO

makeoptions	KERNEL_BASE_PHYS="0x00200000"
makeoptions	KERNEL_BASE_VIRT="0xffffffc000200000"

config		bsd	root on rd0a swap on rd0b

# mainbus
mainbus0	at root

# cpu0
