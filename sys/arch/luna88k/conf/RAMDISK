#	$OpenBSD: RAMDISK,v 1.12 2014/10/10 05:43:35 deraadt Exp $

machine		luna88k m88k
maxusers	4

option		TIMEZONE=0
option		DST=0
option		SMALL_KERNEL
option		NO_PROPOLICE
option		BOOT_CONFIG

option		MINIROOTSIZE=4096
option		RAMDISK_HOOKS

option		SCSITERSE

option		FFS
option		INET
option		INET6

config		bsd root rd0a swap on rd0b

option		M88100		# 88100 support; mandatory
option		MAX_CPUS=4	# may have up to 4 processors
option		ERRATA__XXX_USR

mainbus0	at root
clock0		at mainbus0
le0		at mainbus0
sio0		at mainbus0
siotty0		at sio0
ws0		at sio0
fb0		at mainbus0
spc0		at mainbus0
spc1		at mainbus0

wsdisplay*	at fb?
wskbd*		at ws?

scsibus*	at scsi?
sd*		at scsibus?			# SCSI disks
st*		at scsibus?			# SCSI tapes
cd*		at scsibus?			# SCSI CD-ROM

pseudo-device	loop 1
pseudo-device	bpfilter 1
pseudo-device	rd 1
